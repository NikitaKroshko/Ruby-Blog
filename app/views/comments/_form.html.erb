<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <!-- Title Input -->

  <div class="mb-6">
    <%= f.label :name, class: 'block text-lg font-medium text-slate-400 mb-2' %>
    <%= f.input :name, input_html: {
          class: 'w-full p-3 rounded-md text-white bg-slate-800 border-2 border-slate-400 focus:border-slate-600 focus:ring-2 focus:ring-slate-500 focus:outline-none placeholder-slate-400',
          placeholder: 'Your name ...'
        },
        wrapper: false, label: false %>
  </div>

  <!-- Content Input -->
  <div class="mb-6">
    <%= f.label :comment, class: 'block text-lg font-medium text-slate-400 mb-2' %>
    <%= f.input :comment, input_html: {
          class: 'w-full p-4 h-28 rounded-md text-white bg-slate-800 resize-none border-2 border-slate-400 focus:border-slate-600 focus:ring-2 focus:ring-slate-500 focus:outline-none placeholder-slate-400',
          placeholder: 'Write your comment here ...'
        },
        wrapper: false, label: false %>
  </div>

  <!-- Submit Button -->
  <div class="text-center">
    <%= f.button :submit, 'Post Comment',
        class: 'bg-slate-600 text-slate-900 px-6 py-2 rounded-full hover:bg-slate-500 transition-all font-semibold shadow-lg' %>
  </div>
<% end %>


