<div class="p-5 bg-slate-900 rounded-lg text-white">
  <div class="flex bg-slate-700 items-start justify-between rounded-lg p-4">
    <div class = "">
      <h4 class="text-base font-semibold text-amber-400"><%= comment.name %></h4>
      <p class="text-sm text-gray-300 leading-relaxed"><%= comment.comment %></p>
    </div>
    <div class="ml-2">
      <%= link_to 'X', [comment.post, comment], method: :delete, class: "text-white hover:text-red-500 text-lg font-bold transition-colors duration-200", data: { confirm: "Are you sure you want to delete this comment?" } %>
    </div>
  </div>
</div>

