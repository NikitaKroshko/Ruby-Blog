<div class="p-5 bg-slate-900 rounded-lg text-white">
  <div class="flex items-start justify-between bg-slate-700 rounded-lg p-4 shadow-md">
    <div class="max-w-full">
      <h4 class="text-base font-semibold text-amber-400 break-words"><%= comment.name %></h4>
      <p class="text-sm text-gray-200 leading-relaxed mt-1 break-words"><%= comment.comment %></p>
    </div>
    <div class="ml-4 shrink-0">
      <%= link_to 'X', [comment.post, comment], method: :delete,
          class: "text-white hover:text-red-500 text-lg font-bold transition-colors duration-200",
          data: { confirm: "Are you sure you want to delete this comment?" } %>
    </div>
  </div>
</div>


